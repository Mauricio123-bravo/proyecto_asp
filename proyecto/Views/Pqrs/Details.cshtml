@model Pqrs

@{
    ViewData["Title"] = Model.Code;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1>Details for Pqrs # @Model.Code</h1>
        <div class="row">
            
            <div class="form-group text-center">
                <label asp-for="Creation_date" class="control-label"></label>
                <input asp-for="Creation_date" class="form-control" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="User.Fullname" class="control-label"></label>
                <input asp-for="User.Fullname" class="form-control" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" readonly />
            </div>
            <div class="mt-3">
                <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>

            </div>
        </div>
    </div>
</div>