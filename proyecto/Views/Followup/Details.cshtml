@model Followup

@{
    ViewData["Title"] = Model.Id;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1>Details for @Model.Description</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                </div>
                <div class="form-group text-center">
                    <label asp-for="Date" class="control-label"></label>
                    <input type="date" asp-for="Date" class="form-control" readonly />
                </div>
                <div class="form-group text-center">
                    <label asp-for="CareStaff" class="control-label"></label>
                    <input asp-for="CareStaff.Name" class="form-control" readonly />
                </div>
                <div class="form-group text-center">
                    <label asp-for="State" class="control-label"></label>
                    <input asp-for="State.Name" class="form-control" readonly />
                </div>
                <div class="form-group text-center">
                    <label asp-for="Pqrs" class="control-label"></label>
                    <input asp-for="Pqrs.Description" class="form-control" readonly />
                </div>
                <div class="mt-2">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>
        </div>
    </div>
</div>