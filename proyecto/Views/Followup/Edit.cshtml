@model Followup

@{
    ViewData["Title"] = "Update Followup";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1>Update Followup</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Idcarestaff" class="control-label"></label>
                        <select asp-for="Idcarestaff" class="form-control" asp-items="ViewBag.CareStaff"></select>
                        <span asp-validation-for="Idcarestaff" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Idstate" class="control-label"></label>
                        <select asp-for="Idstate" class="form-control" asp-items="ViewBag.State"></select>
                        <span asp-validation-for="Idstate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Idpqrs" class="control-label"></label>
                        <select asp-for="Idpqrs" class="form-control" asp-items="ViewBag.Pqrs"></select>
                        <span asp-validation-for="Idpqrs" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Edit" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
